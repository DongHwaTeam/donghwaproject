{{>layout/header}}
<div class = "col-md-12">
    <div class = "row">
        <div class = "col-md-6">
            <a href = "/books/save" role = "button" class = "btn btn-primary"> 책 등록</a>
        </div>
    </div>
</div>
<div>
    <input type = "text" placeholder="검색어 입력">
    <button> 검색</button>
</div>
<br>
<!--목록 출력 영역-->
<h2>최신 등록일 기준 정렬 list</h2>
<table class = "table table-horizontal table-bordered">
    <thead class = "thead-strong">
    <tr>
        <th> 책이름 </th>
        <th> 책 이미지 </th>
        <th> 저자명 </th>
        <th> 출판사 </th>
    </tr>
    </thead>
    <tbody id = "tbody">
    {{#books}}
        <tr>
            <td>{{title}}</td>
            <td><a href = "/api/v1/books/info/{{bookKey}}">{{bookCover}}</a>
            <td>{{author}}</td>
            <td>{{publisher}}</td>

        </tr>
    {{/books}}
    </tbody>
</table>
{{>layout/footer}}