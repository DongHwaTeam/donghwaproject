{{>layout/header}}
<h1> 책 정보 수정</h1>
<div class = "col-md-12">
    <div class = "col-md-4">
        <form>
        <div class = "form-group">
            <label for = "id"> 책 번호 </label>
            <input type = "text" class = "form-control" id = "id" value = "{{book.bookKey}}" readonly>
        </div>
            <div class = "form-group">
                <label for = "bookintro">책 소개 </label>
                <input type = "text" class = "form-control" id = "bookIntro" value = "{{book.bookIntro}}">
            </div>

            <div class = "form-group">
                <label for = "bookContent">책 내용 </label>
                <input type = "text" class = "form-control" id = "bookContent" value = "{{book.bookContent}}">
            </div>
        </form>
        <a href = "/" role = "button" class = "btn btn-secondary">취소</a>
        <button type = "button" class = "btn btn-primary" id = "btn-update"> 수정 완료 </button>
    </div>
</div>
{{>layout/footer}}