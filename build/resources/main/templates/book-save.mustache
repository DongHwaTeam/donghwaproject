{{>layout/header}}
<h1>새로운 책 등록 하기</h1>

<div class = "col-md-12">
    <div class="col-md-4">
        <form enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">title</label>
                <input type="text" class="form-control"
                       id = "title" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="author">author</label>
                <input type="text" class="form-control"
                       id = "author" placeholder="저자를 입력하세요">
            </div>
            <div class="form-group">
                <label for="publisher">publisher</label>
                <input type="text" class="form-control"
                       id = "publisher" placeholder="출판사를 입력하세요">
            </div>
            <div class="form-group">
                <label for="country">country</label>
                <input type="text" class="form-control"
                       id = "country" placeholder="나라를 입력하세요">
            </div>
            <div class="form-group">
                <label for="bookIntro">bookIntro</label>
                <input type="text" class="form-control"
                       id = "bookIntro" placeholder="책 소개를 입력하세요">
            </div>
            <div class="form-group">
                <label for="bookCover">bookCover</label>
                <input type="text" class="form-control"
                       id = "bookCover" placeholder="책 표지를 입력하세요">
            </div>
            <div class="form-group row">
                <label for="inputFile" class="col-sm-2 col-form-label"><strong>첨부 파일</strong></label>
                <div class="col-sm-10">
                    <div class="custom-file" id="inputFile">
                        <input name="file" type="file" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">파일을 선택해 주세요.</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="totalPage">totalPage</label>
                <input type="number" class="form-control"
                       id = "totalPage" placeholder="책의 페이지수를 입력하세요">
            </div>
            <div class="form-group">
                <label for="publishedDate">publishedDate</label>
                <input type="date" class="form-control"
                       id = "publishedDate">
            </div>
        </form>

        <a role="button" class="btn btn-primary" id="btn-save">등록</a>
        <a href="/homepage" role="button" class="btn btn-secondary" >취소</a>

    </div>
</div>

{{>layout/footer}}